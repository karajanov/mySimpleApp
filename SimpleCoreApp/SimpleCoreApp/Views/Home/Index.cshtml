@{
    ViewData["Title"] = "Home Page";

    var categoryList = (ViewBag.CategoryTitles as List<Categories>);
}

<br />
<br />
<h1>Generic Categories</h1>
<br />
<br />

@if (categoryList != null && categoryList.Count != 0)
{

    <table class="table table-hover">
        <thead>
            <tr class="table-primary">
                <th scope="col">Category</th>
                <th scope="col">Products List</th>
                <th scope="col">New Products</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in categoryList)
            {
            <tr>
                <td>@item.Title</td>
                <td><a href="@Url.Action("Details", "Products", new { id = item.Id })">Display List</a></td>
                <td><a href="@Url.Action("Insert", "Products", new { id = item.Id })">Add to Category</a></td>
            </tr>
            }
        </tbody>
    </table>

}
else
{
    <h4 class="text-warning">No Categories Found</h4>
}
